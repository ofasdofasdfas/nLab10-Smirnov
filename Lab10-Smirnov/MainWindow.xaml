<Window x:Class="StudentInfoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Information" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Load File" Click="LoadFile_Click" Margin="0,10"/>
            <TextBox x:Name="FileContent" Margin="0,10" Height="200" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            <Button Content="Process Data" Click="ProcessData_Click" Margin="0,10"/>
            <TextBox x:Name="ProcessedContent" Margin="0,10" Height="200" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
